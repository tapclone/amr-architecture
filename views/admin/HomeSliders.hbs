            <script>
                function sure(image, field) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    );
                    $.ajax({
                        url: '/admin/deleteSliderImage',
                        method: 'POST', // Add the 'type' option to specify POST method
                        data: {
                        image,
                        field
                        },
                        success: (response) => {
                        location.reload();
                        }
                    });
                    }
                });
                }

